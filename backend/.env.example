# Environment Variables Configuration

# Server Configuration
PORT=5000
NODE_ENV=development
HOST=localhost

# Database Configuration
DB_TYPE=json
# DB_TYPE=postgresql  # Uncomment for PostgreSQL
# DB_TYPE=mysql       # Uncomment for MySQL

# PostgreSQL (if using)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=admin
# DB_PASSWORD=password
# DB_NAME=kssfk

# MySQL (if using)
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=admin
# DB_PASSWORD=password
# DB_NAME=kssfk

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY=24h

# File Upload Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Platform Settings
UPLOAD_FEE=1000  # KES
PENALTY_PERCENTAGE=20  # 20% for fake information
MAINTENANCE_MODE=false

# Email Configuration (for future use)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-password
# EMAIL_FROM=noreply@kssfk.ac.ke

# Platform URLs
PARENT_PORTAL_URL=http://localhost:5000/
ADMIN_PANEL_URL=http://localhost:5000/admin.html
SCHOOL_DASHBOARD_URL=http://localhost:5000/school-dashboard.html
